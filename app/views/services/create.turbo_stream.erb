<%= fields model: @invoice do |service_form| %>
  <%= service_form.simple_fields_for :services, child_index: params[:index] do |service_form| %>
    <%= turbo_stream.replace "add-service" do %>
      <%= service_form.submit "Add service", 
            formaction: service_path(service_form.index.to_i + 1), 
            formmethod: :post, 
            formnovalidate: true, 
            id: "add-service" %>
    <% end %>

    <%= turbo_stream.append "services" do %>
      <%= render "form", service_form: service_form %>
    <% end %>
  <% end %>
<% end %>